        function add(a) {
            var d = $("#" + a).val();
            if ((d!=null&d!=""&d!=undefined)) {
                $("#" + a + "_param").append("<a class='param_value_item' onclick='del(\"" + a + "\",this)'>" + $("#" + a).val() + "<i class='md md-clear'></i></a>");
                    
                    switch (a) {
                        case 'ztmc': { zt.push($("#" + a).val().trim()); }; break;
                        case 'qymc': { qy.push($("#" + a).val().trim()); }; break;
                        case 'kfs': { kfs.push($("#" + a).val().trim()); }; break;
                        case 'lpmc': { lpmc.push($("#" + a).val().trim()); }; break;
                        case 'ytmc': { yt.push($("#" + a).val().trim()); }; break;
                        case 'xfyt': { xfyt.push($("#" + a).val().trim()); }; break;
                        case 'hxmc': { hx.push($("#" + a).val().trim()); }; break;
                        
                    }
                option.pagenow = 1;
                init2();
            }
            else if(a=='zlmjqj')
            {
                var qqj = $("#zlmjqj_q").val().trim();
                var hqj =$("#zlmjqj_h").val().trim();
                var v="";
                if(checknull(qqj)&&checknull(hqj))
                {
                    alert("请填内容！");
                }
                else{
                    if(!checknull(qqj)&&checknull(hqj))
                        v="0-"+qqj;
                    else if(checknull(qqj)&&!checknull(hqj))
                        v=hqj+"-∞";
                    else 
                        v=qqj+"-"+hqj;
                    zlmjqj.push(v);
                    $("#" + a + "_param").append("<a class='param_value_item' onclick='del(\"" + a + "\",this)'>" + v + "<i class='md md-clear'></i></a>");
                }
               
            }
            else
