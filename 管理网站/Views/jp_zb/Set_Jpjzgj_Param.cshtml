                alert("请填内容！")
            }
        } 
        function checknull(a)
        {
            if(a==null||a=="")
                return true;
        }
        function add_by_list(a,b) {

            $("#" + a + "_param").append("<a class='param_value_item' onclick='del(\"" + a + "\",this)'>" + b.value + "<i class='md md-clear'></i></a>");
            option.pagenow = 1;
            init2();
        }
        function del(a, b) {
            document.getElementById(a + "_param").removeChild(b);
            switch (a) {
                case 'ztmc': { zt.splice(zt.indexOf(b.text.trim()), 1); }; break;
                case 'qymc': { qy.splice(qy.indexOf(b.text.trim()), 1); }; break;
                case 'kfs': { kfs.splice(kfs.indexOf(b.text.trim()), 1); }; break;
                case 'lpmc': { lpmc.splice(lpmc.indexOf(b.text.trim()), 1); }; break;
                case 'ytmc': { yt.splice(yt.indexOf(b.text.trim()), 1); }; break;
                case 'xfyt': { xfyt.splice(xfyt.indexOf(b.text.trim()), 1); }; break;
                case 'hxmc': { hx.splice(hx.indexOf(b.text.trim()), 1); }; break;
                case 'zlmjqj': { zlmjqj.splice(zlmjqj.indexOf(b.text.trim()), 1);}; break;
            }
            option.pagenow = 1;
            init2();
        }
        function add_default(a,b) {

            $("#" + a + "_param").append("<a class='param_value_item' onclick='del(\"" + a + "\",this)'>" + b+ "<i class='md md-clear'></i></a>");
            switch (a) {
                case 'ztmc': { zt.push(b); }; break;
                case 'qymc': { qy.push(b); }; break;
                case 'kfs': { kfs.push(b); }; break;
                case 'lpmc': { lpmc.push(b); }; break;
                case 'ytmc': { yt.push(b); }; break;
                case 'xfyt': { xfyt.push(b); }; break;
                case 'hxmc': { hx.push(b); }; break;
                case 'zlmjqj': { zlmjqj.push(b); }; break;
