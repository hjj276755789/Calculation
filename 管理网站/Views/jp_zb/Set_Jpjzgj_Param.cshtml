            option.pagenow = 1;
            init2();
           
        }

        var table = new Table_bs($('#cjsj'));
        function cleardata(a) {
            $(a).on("hidden.bs.modal", function () {
                $(this).removeData("bs.modal");
            });

        }
        function Table_bs($box) {

            var _init_bit = false;
            var _box = $box;

            this.init = function () {

                _box.addClass('table-responsive');

                var html = '';
                html += '<table class="table table-bordered " style="text-align: center; ">';
                html += '<thead style="font-weight: bold;">';
                // html += '<tr>';
                // html += '</tr>';
                html += '</thead>';
                html += '<tbody>';
                // html += '<tr>';
                // html += '</tr>';
                html += '</tbody>';
                html += '</table>';

                _box.append($(html));

                _init_bit = true;
            }
            this.load = function (option) {

                if (!_init_bit) {
                    this.init();
                }

                // 表头
                var thead = option.colNames;

                var html_thead = '';
                html_thead += '<tr>';
                for (var i = 0; i < thead.length; i++) {
                    html_thead += '<td>' + thead[i] + '</td>';
                }
                html_thead += '</tr>';

                _box.find('thead').append($(html_thead));

                // 表身
                var tbody = option.data;
                var html_tbody = '';

                for (var j1 = 0; j1 < tbody.length; j1++) {
                    var buff = tbody[j1];

                    html_tbody += '<tr>';
                    for (var j2 = 0; j2 < buff.length; j2++) {
                        html_tbody += '<td>' + buff[j2] + '</td>';
                    }
                    html_tbody += '</tr>';
                }
                _box.find('tbody').append($(html_tbody));
                var html_page = "";
                html_page += "<ul class='pagination'><li tabindex='0' class='paginate_button previous' id='datatable-fixed-header_previous' aria-controls='datatable-fixed-header'><a onclick='pre()'>上一页</a></li>";
                html_page += "<li tabindex='0' class='paginate_button previous disabled' id='datatable-fixed-header_previous' aria-controls='datatable-fixed-header'><a href='#'>" + option.datacount + "</a></li>";

                html_page += "<li tabindex='0' class='paginate_button next' id='datatable-fixed-header_next' aria-controls='datatable-fixed-header'><a onclick='next()'>下一页</a></li></ul>";
                _box.find('tbody').append((html_page));
            }
            this.reflush = function (option) {
                _box.empty();
                this.init();
                //option.data = [];
                //this.load(option);
            }
        }



        var option = {
            colNames: ['成交日期', "区域", "组团", "开发商", "楼盘名称", "业态", "细分业态", "户型", "建筑面积", "套内面积", "成交金额", "套数","主力面积区间"],
            data: [

            ],
            pagenow :1,
            pagesize: 10,
            datacount :0,
        }

        $(function () {
            init3();
            init1();
        });

        function pre()
        {
            if(option.pagenow>1)
            {
                option.pagenow -= 1;
                init2();
            }
        }
        function next() {
            if (option.pagenow<(option.datacount / option.pagesize)+1) {
                option.pagenow += 1;
                init2();
            }
        }
        function init2() {

            var data = { 'nf':nf,'zc':zc,'zt': zt, 'qy': qy,  'kfs': kfs,'lpmc': lpmc, 'yt': yt, 'xfyt': xfyt, 'hx': hx ,'pagenow':option.pagenow,'pagesize':option.pagesize};
            $.ajax({
                url: "/jp_zb/cxjg",
                data: data,
                type: "post",
                success: function (data) {
                    var d = [];
                    for (var i = 0; i < data.data.length; i++) {
                        d.push([data.data[i].cjrq, data.data[i].qy, data.data[i].zt, data.data[i].kfs, data.data[i].lpmc, data.data[i].yt, data.data[i].xfyt, data.data[i].hx, data.data[i].jzmj, data.data[i].tnmj, data.data[i].cjje, data.data[i].ts, data.data[i].zlmjqj ]);
                    };
                    option.data = d;
                    option.datacount = data.datacount;
                    option.pagenow = data.pagenow;
                    table.reflush(option);
                    table.load(option);
                }
            })
        }
        function init1() {
            var data = { 'nf':nf,'zc':zc,'zt': zt, 'qy': qy, 'kfs': kfs, 'lpmc': lpmc, 'yt': yt, 'xfyt': xfyt, 'hx': hx ,'pagenow':option.pagenow,'pagesize':option.pagesize};
