        function init3()
        {
            $.ajax({
                url: "/jp_zb/get_jpxm_xq",
                data: {'id': @ViewBag.id},
                type: "post",
                success: function (data) {
                    if(data)
                    {
                        if(data.ztcs)
                        {
                            var ztlb =data.ztcs.split(",");
                            for (var i = 0; i < ztlb.length; i++) {
                                add_default("ztmc",ztlb[i]);
                            }
                        }
                        if(data.qycs)
                        {
                            var qylb =data.qycs.split(",");
                            for (var i = 0; i < qylb.length; i++) {
                                add_default("qymc",qylb[i]);
                            }
                        }
                        if(data.kfs)
                        {
                            var kfs =data.kfs.split(",");
                            for (var i = 0; i < kfs.length; i++) {
                                add_default("kfs",kfs[i]);
                            }
                        }
                        if(data.lpcs)
                        {
                            var lplb =data.lpcs.split(",");
                            for (var i = 0; i < lplb.length; i++) {
                                add_default("lpmc",lplb[i]);
                            }
                        }
                        if(data.ytcs)
                        {
                            var ytlb =data.ytcs.split(",");
                            for (var i = 0; i < ytlb.length; i++) {
                                add_default("ytmc",ytlb[i]);
                            }
                        }
                        if(data.xfytcs)
                        {
                            var xfytlb =data.xfytcs.split(",");
                            for (var i = 0; i < xfytlb.length; i++) {
                                add_default("xfyt",xfytlb[i]);
                            }
                        }
                        if(data.hxcs)
                        {
                            var hxlb =data.hxcs.split(",");
                            for (var i = 0; i < hxlb.length; i++) {
                                add_default("hxmc",hxlb[i]);
                            }
                        }
                        if(data.zlmjqj)
                        {
                            var zlmjqj =data.zlmjqj.split(",");
                            for (var i = 0; i < zlmjqj.length; i++) {
                                add_default("zlmjqj",zlmjqj[i]);
                            }
                        }
                    }
                }
            })
        }

        function save()
        {
            var data = { 'zt': zt, 'qy': qy,  'kfs': kfs,'lpmc': lpmc, 'yt': yt, 'xfyt': xfyt, 'hx': hx,'zlmjqj':zlmjqj, 'id': @ViewBag.id };
            $.ajax({
                url: "/jp_zb/save_jpxmcs",
                data: data,
                type: "post",
                success: function (data) {
                    if (data.IsSuccessful) {
                        alert("保存成功");
                        table.reflush(option);
                        init1();
                    }
                    else alert(data.ErrMsg);
                }
            })

        }

        $("#ztmc").bind("input propertychange",function(event){
            if( $("#ztmc").val()){
                $.ajax({
                    url:"/jp_zb/GET_ZTLB",
