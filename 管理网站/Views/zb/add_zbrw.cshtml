
@{
    ViewBag.Title = "add_zbrw";
}

<div>
    <input type="hidden" name="mbbh" class="form-control" value="@this.ViewBag.mbbh" id="mbbh" />
    <input type="text" class="form-control" placeholder="任务名称" name="rwmc" id="rwmc" />
    <input type="text" class="form-control" placeholder="年份" name="nf" id="nf" />
    <input type="text" class="form-control" placeholder="周次" name="zc" id="zc" />
    <input type="button" value="确认添加" class="btn btn-primary " onclick="tt()" />
</div>
<script>
    function tt(){
        
        $.ajax({
            url: "/zb/add_zbrw",
            type: "post",
            data: { mbbh: $("#mbbh").val(), rwmc: $("#rwmc").val(), nf: $("#nf").val(), zc: $("#zc").val() },
            success: function (data) {
                if (data.IsSuccessful) {
                    
                    $('#fbrw').modal('hide');
                }
                else
                {
                    alert(data.ErrMsg);
                }
            }
        })
    }
</script>